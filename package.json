{
    "name": "contro-max",
    "version": "0.0.0-dev",
    "description": "Game controls done even better!",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.js",
    "scripts": {
        "build": "stencil build --docs",
        "start": "stencil build --dev --watch --serve",
        "test": "stencil test --spec --e2e",
        "test:watch": "stencil test --spec --e2e --watchAll",
        "generate": "stencil generate",
        "jest": "jest",
        "jest:watch": "pnpm jest -- --watch",
        "lint": "eslint src/**"
    },
    "keywords": [
        "game",
        "controls",
        "input",
        "fps",
        "mouse",
        "keyboard",
        "gamepad",
        "joystick",
        "controller",
        "library",
        "abstraction",
        "mobile",
        "movement",
        "ui",
        "touch",
        "react",
        "mousetrap",
        "react hooks"
    ],
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "license": "MIT",
    "dependencies": {
        "emittery": "^0.10.0",
        "fake-tag": "^3.0.0",
        "lodash-es": "^4.17.21",
        "react-use": "^17.3.1",
        "use-typed-event-listener": "^3.0.0"
    },
    "devDependencies": {
        "@stencil/core": "^2.11.0",
        "@stencil/eslint-plugin": "^0.4.0",
        "@types/jest": "^27.0.3",
        "@types/lodash-es": "^4.17.5",
        "@types/react": "^17.0.37",
        "@zardoy/tsconfig": "^1.2.2",
        "@zardoy/vit": "^0.0.1",
        "esbuild": "^0.14.2",
        "esbuild-runner": "^2.2.1",
        "eslint": "^8.4.0",
        "eslint-config-zardoy": "^0.2.1",
        "jest": "^27.4.3",
        "stencil-inline-svg": "^1.1.0",
        "type-fest": "^2.8.0",
        "typescript": "^4.5.2",
        "vite": "^2.6.14"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "optionalDependencies": {
        "react": "^17.0.2"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 150
    }
}
