{
    "name": "contro-max",
    "version": "0.0.0-dev",
    "description": "Game controls done even better!",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "module": "build/index.js",
    "files": [
        "build"
    ],
    "scripts": {
        "build": "stencil build --docs",
        "start": "stencil build --dev --watch --serve",
        "test": "pnpm test:browser && pnpm test:ui",
        "test:browser": "node test/run.mjs",
        "test:browser:watch": "node test/run.mjs watch",
        "test:ui": "stencil test --spec --e2e",
        "test:ui:watch": "stencil test --spec --e2e --watchAll",
        "storybook": "start-storybook -p 6006",
        "generate": "stencil generate",
        "lint": "eslint src/**"
    },
    "keywords": [
        "game",
        "controls",
        "input",
        "fps",
        "mouse",
        "keyboard",
        "gamepad",
        "joystick",
        "controller",
        "library",
        "abstraction",
        "mobile",
        "movement",
        "ui",
        "touch",
        "react",
        "mousetrap",
        "react hooks"
    ],
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "license": "MIT",
    "dependencies": {
        "emittery": "^0.10.0",
        "lodash-es": "^4.17.21"
    },
    "devDependencies": {
        "@stencil/core": "^2.11.0",
        "@stencil/eslint-plugin": "^0.4.0",
        "@stencil/sass": "^1.5.2",
        "@storybook/addon-actions": "^6.4.9",
        "@storybook/addon-essentials": "^6.4.9",
        "@storybook/addon-interactions": "^6.4.9",
        "@storybook/addon-links": "^6.4.9",
        "@storybook/react": "^6.4.9",
        "@storybook/web-components": "^6.4.9",
        "@types/chai": "^4.3.0",
        "@types/lodash-es": "^4.17.5",
        "@types/mocha": "^9.0.0",
        "@types/react": "^17.0.37",
        "@zardoy/tsconfig": "^1.2.2",
        "@zardoy/vit": "^0.0.1",
        "chai": "^4.3.4",
        "esbuild": "^0.14.2",
        "esbuild-runner": "^2.2.1",
        "eslint": "^8.4.0",
        "eslint-config-zardoy": "^0.2.1",
        "execa": "^6.0.0",
        "lit-html": "^2.0.2",
        "mocha": "^9.1.3",
        "mocha-chrome": "^2.2.0",
        "puppeteer": "^12.0.1",
        "rollup": "^2.60.2",
        "stencil-inline-svg": "^1.1.0",
        "tailwindcss": "^2.2.19",
        "type-fest": "^2.8.0",
        "typescript": "^5.0.0",
        "vite": "^2.6.14"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "optionalDependencies": {
        "react": "^17.0.2",
        "use-typed-event-listener": "^4.0.2"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 150
    }
}
