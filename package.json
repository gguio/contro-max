{
    "name": "contro-max",
    "version": "0.0.0-dev",
    "description": "Game controls done even better!",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.js",
    "scripts": {
        "test:e2e": "start-server-and-test dev http-get://localhost:3000 test:cypress",
        "start": "tsc",
        "dev": "vite",
        "test:cypress": "cypress run",
        "test:jest": "jest",
        "test:jest:watch": "pnpm test:jest -- --watch",
        "test": "wtr test-out/**/*.test.js --puppeteer --node-resolve",
        "test:watch": "pnpm test -- --watch",
        "test:prepare": "node esbuild.mjs",
        "test:prepare:watch": "pnpm test:prepare -- watch",
        "lint": "eslint src/**"
    },
    "keywords": [
        "game",
        "controls",
        "input",
        "fps",
        "mouse",
        "keyboard",
        "gamepad",
        "joystick",
        "controller",
        "library",
        "abstraction",
        "mobile",
        "movement",
        "ui",
        "touch",
        "react",
        "mousetrap",
        "react hooks"
    ],
    "author": "Vitaly Turovsky <vital2580@icloud.com>",
    "license": "MIT",
    "dependencies": {
        "emittery": "^0.10.0",
        "lodash-es": "^4.17.21",
        "react-use": "^17.3.1",
        "use-typed-event-listener": "^3.0.0"
    },
    "devDependencies": {
        "@types/expect-puppeteer": "^4.4.7",
        "@types/jest": "^27.0.3",
        "@types/jest-environment-puppeteer": "^4.4.1",
        "@types/lodash-es": "^4.17.5",
        "@types/puppeteer": "^5.4.4",
        "@types/react": "^17.0.37",
        "@web/test-runner": "^0.13.22",
        "@web/test-runner-playwright": "^0.8.8",
        "@web/test-runner-puppeteer": "^0.10.4",
        "@zardoy/tsconfig": "^1.2.2",
        "@zardoy/vit": "^0.0.1",
        "esbuild": "^0.14.2",
        "esbuild-runner": "^2.2.1",
        "eslint": "^8.4.0",
        "eslint-config-zardoy": "^0.2.1",
        "globby": "^12.0.2",
        "jest": "^27.4.3",
        "jest-puppeteer": "^6.0.2",
        "puppeteer": "^12.0.1",
        "start-server-and-test": "^1.14.0",
        "type-fest": "^2.8.0",
        "typescript": "^4.5.2",
        "vite": "^2.6.14"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "optionalDependencies": {
        "react": "^17.0.2"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 150
    }
}
